.listing.col-xs-6.col-sm-4.col-md-3.col-leg-2
  .inside-container{ style: "background-image: url(#{locals[:product].images.first});", itemprop: 'image' }

    .title
      %h3{ itemprop: 'name' }
        = raw locals[:product].title

    .price
      %span{ itemprop: 'price' }
        = number_to_currency( locals[:product].price )

    .url
      =link_to '#', class: 'show-description', title: locals[:product].title, data: { toggle: 'modal', target: "#details-#{locals[:product].id}" }, role: 'button', tabindex: '0' do
        %i.fa.fa-search

    .clearfix

.modal.fade{ role: "dialog", tabindex: "-1" , id: "details-#{locals[:product].id}" }
  .modal-dialog{:role => "document"}
    .modal-content

      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title= raw locals[:product].title

      .modal-body
        %p= raw locals[:product].description
        .images
          - locals[:product].images.each do |image|
            = image_tag image, class: 'img-responsive img-thumbnail img-thumb'

      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        = link_to 'Buy on Etsy', locals[:product].url, class: 'btn btn-danger', target: "_blank", onClick: "ga('send', 'event', 'Visiting-Etsy', 'click', 'CTA Etsy');"